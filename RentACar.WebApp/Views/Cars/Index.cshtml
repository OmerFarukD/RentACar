@model List<CarResponseDto>


<a asp-action="Add" asp-controller="Cars" type="button" class="btn btn-outline-success">Ekle</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Marka Adı</th>
        <th scope="col">Model Adı</th>
        <th scope="col">Model Yılı</th>
        <th scope="col">Günlük fiyatı</th>
        <th scope="col">Rengi</th>
        <th scope="col">Yakıt Tipi</th>
        <th scope="col">Kilometre</th>
        <th scope="col">Vites tipi</th>
    </tr>
    </thead>
    <tbody>
    
        @foreach (var item in Model)
        {
            <tr>
            <th scope="row">@item.BrandName</th>
            <td>@item.ModelName</td>
            <td>@item.ModelYear</td>
            <td>@item.DailyPrice</td>
            <td>@item.ColorName</td>
            <td>@item.FuelName</td>
            <td>@item.Kilometer</td>
            <td>@item.TransmissionName</td>
            <td><a asp-action="Add" asp-controller="Cars" asp-route-id="@item.Id" type="button" class="btn btn-outline-success">Güncelle</a></td>
            <td><a asp-action="Detail" asp-controller="Cars" asp-route-id="@item.Id" type="button" class="btn btn-outline-info">Detay</a></td>
            </tr>
        }
    
    </tbody>
</table>